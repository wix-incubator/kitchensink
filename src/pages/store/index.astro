---
import { SEO } from '@wix/headless-seo/react';
import { loadSEOTagsServiceConfig } from '@wix/headless-seo/services';
import BaseLayout from '../../layouts/BaseLayout.astro';
import StoreIntroPage from '../../react-pages/store/index';

const seoTagsServiceConfig = await loadSEOTagsServiceConfig({
  pageUrl: Astro.url.href,
  itemData: {
    pageName: 'Wix Stores',
    seoData: {
      tags: [
        {
          type: 'title',
          children: 'Wix Stores - E-commerce Solutions',
        },
        {
          type: 'meta',
          props: {
            name: 'description',
            content:
              'Explore Wix Stores functionality with multiple implementation examples. Browse products, manage cart, and handle e-commerce workflows with our comprehensive store system.',
          },
        },
      ],
    },
  },
});
---

<BaseLayout>
  <SEO.Tags seoTagsServiceConfig={seoTagsServiceConfig} slot="seo-tags" />
  <StoreIntroPage client:load slot="body" />
</BaseLayout>
