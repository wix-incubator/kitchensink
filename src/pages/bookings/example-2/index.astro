---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import BookingsHomePage from '../../../react-pages/bookings/example-2/index.tsx';
import { loadBookingServicesServiceConfig } from '../../../headless/bookings/services/booking-services-service';

// Load featured services (first 3)
const bookingServicesConfig = await loadBookingServicesServiceConfig();
---

<BaseLayout>
  <title>Personal Coaching Services - Book Your Session</title>
  <meta
    name="description"
    content="Professional personal coaching services. Book your session with our experienced coaches to achieve your goals."
  />

  <BookingsHomePage
    client:load
    bookingServicesConfig={bookingServicesConfig}
    slot="body"
  />
</BaseLayout>
