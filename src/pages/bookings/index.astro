---
import BaseLayout from "../../layouts/BaseLayout.astro";
import BookingsIntroPage from "../../react-pages/bookings/index";
import { loadBookingServicesServiceConfig } from "../../headless/bookings/booking-services-service";

// Load services to show preview data
const bookingServicesConfig = await loadBookingServicesServiceConfig();
---

<BaseLayout>
  <title>Wix Bookings - Service Booking Solutions</title>
  <meta
    name="description"
    content="Explore Wix Bookings functionality with multiple implementation examples. Book appointments, manage services, and handle scheduling with our comprehensive booking system."
  />
  <meta
    name="keywords"
    content="Wix Bookings, appointment booking, service scheduling, online booking system"
  />

  <BookingsIntroPage
    client:load
    bookingServicesConfig={bookingServicesConfig}
    slot="body"
  />
</BaseLayout>
