---
import { SEO } from '@wix/headless-seo/react';
import { loadSEOTagsServiceConfig } from '@wix/headless-seo/services';
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogIntroPage from '../../react-pages/blog/intro-page';

const seoTagsServiceConfig = await loadSEOTagsServiceConfig({
  pageUrl: Astro.url.href,
  itemData: {
    pageName: 'Wix Blog',
    seoData: {
      tags: [
        {
          type: 'title',
          children: 'Wix Blog - Complete Blogging Platform',
        },
        {
          type: 'meta',
          props: {
            name: 'description',
            content:
              'Explore Wix Blog functionality with multiple implementation examples. Create and manage blog posts, categories, and engage with readers through comments and social sharing.',
          },
        },
      ],
    },
  },
});
---

<BaseLayout>
  <SEO.Tags seoTagsServiceConfig={seoTagsServiceConfig} slot="seo-tags" />
  <BlogIntroPage client:load slot="body" />
</BaseLayout>
